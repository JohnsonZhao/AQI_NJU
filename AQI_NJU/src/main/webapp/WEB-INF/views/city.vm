    <title>MyAQI</title>

    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="../static/dep/materialize/css/materialize.css" type="text/css" rel="stylesheet"
